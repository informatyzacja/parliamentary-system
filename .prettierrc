{
  "bracketSpacing": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "proseWrap": "preserve",
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.rc",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
