{
  "name": "parliamentary-system",
  "private": true,
  "version": "1.4.41",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "wait-on tcp:5432 && npm --prefix apps/api run dev",
    "dev:web": "wait-on http://0.0.0.0:1337/admin && npm --prefix apps/web run dev",
    "dev:database": "docker compose -f docker-compose.dev.yml up --force-recreate -V",
    "dev": "cross-env FORCE_COLOR=1 npm-run-all -l -p dev:*",
    "postinstall": "husky install",
    "build": "npm-run-all -l -p build:*",
    "build:api": "npm --prefix apps/api run build",
    "build:web": "npm --prefix apps/web run build",
    "lint": "npm-run-all -l -p lint:*",
    "lint:web": "npm --prefix apps/web run lint",
    "format:check": "prettier --ignore-unknown --check apps/api apps/web/src",
    "semantic-release": "semantic-release"
  },
  "packageManager": "npm@9.6.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/informatyzacja/parliamentary-system.git"
  },
  "author": {
    "name": "Michał Korczak",
    "url": "https://omikor.in"
  },
  "maintainers": [
    {
      "name": "Michał Korczak",
      "url": "https://omikor.in"
    },
    {
      "name": "Dawid Stachowiak"
    },
    {
      "name": "Bartosz Gotowski"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/informatyzacja/parliamentary-system/issues"
  },
  "homepage": "https://github.com/informatyzacja/parliamentary-system#readme",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "turbo": "^1.10.9",
    "wait-on": "^7.0.1"
  },
  "resolutions": {
    "graphql": "16.6.0"
  },
  "engines": {
    "node": "^18.17.0"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.8.1"
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "*.{js,jsx,ts,tsx,graphql,gql}": "eslint --ext .js,.jsx,.ts,.tsx,.graphql,.gql "
  }
}
